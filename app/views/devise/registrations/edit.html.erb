<main>
  <div class="container mx-auto my-6 flex justify-center items-center devise-card">
    <div>
      <h2 class="mb-10 text-3xl font-extrabold text-center">Edit <%= resource_name.to_s.humanize %></h2>
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  
        <div class="mb-2 mt-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-input w-full px-4 py-2.5 mt-2 text-black pl-6 leading-3 placeholder:text-sm', placeholder:'Email' %>
        </div>
  
        <div class="mb-6">
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-input w-full px-4 py-2.5 mt-2 text-black pl-6 leading-3 placeholder:text-sm', placeholder:'Password actuel' %>
        </div>
  
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
  
        <div class="mb-6">
          <i  class="text-sm text-gray-900">(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-input w-full px-4 py-2.5 mt-2 text-black pl-6 leading-3 placeholder:text-sm', placeholder:'Password' %>
          <% if @minimum_password_length %>
            <br />
            <em  class="text-sm text-gray-900"><%= @minimum_password_length %> caract√®res minimum</em>
          <% end %>
        </div>
  
        <div class="mb-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input w-full px-4 py-2.5 mt-2 text-black pl-6 leading-3 placeholder:text-sm', placeholder:'Password' %>
        </div>
        <div data-turbo="false" class="text-center my-6">
          <%= f.submit "Update", class:'button-primary-black' %>
        </div>
      <% end %>
      <div class="mt-6 text-sm text-gray-900">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
  
      <%= link_to "Back", :back, class:' class="mt-6 text-sm text-gray-900"' %>
    </div>
  </div>
</main>