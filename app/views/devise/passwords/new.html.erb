<main>
  <div class="container mx-auto my-6 flex justify-center items-center devise-card">
    <div>
      <h2 class="mb-10 text-3xl font-extrabold text-center">Forgot your password?</h2>
  
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  
        <div class="mb-2 mt-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-input w-full px-4 py-2.5 mt-2 text-black pl-6 leading-3 placeholder:text-sm', placeholder:'Email' %>
        </div>
  
        <div data-turbo="false" class="text-center my-6">
          <%= f.submit "Reset password", class:'button-primary-black' %>
        </div>
      <% end %>
  
      <div class="mt-6 text-sm text-gray-900">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  
</main>
