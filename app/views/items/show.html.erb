<main class="show-item-page container mx-auto mt-28 px-5 flex">
  <div class=" animate__animated  animate__backInLeft card flex-1">
    <img class="xl-card-rarity card-rarity" src="<%=image_path("rarity-#{@item.rarity}.png")%>">
